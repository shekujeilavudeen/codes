public class StringArrayExample {
    public static void main(String[] args) {
        // Declare and initialize a string array
        String[] fruits = {"Apple", "Banana", "Orange", "Grape"};

        // Accessing elements of the array
        System.out.println("First fruit: " + fruits[0]);
        System.out.println("Third fruit: " + fruits[2]);

        // Iterating through the array using a for-each loop
        System.out.println("\nAll fruits in the array:");
        for (String fruit : fruits) {
            System.out.println(fruit);
        }

        // Modifying an element (though Strings are immutable, array elements can be reassigned)
        fruits[1] = "Mango";
        System.out.println("\nAfter modification, second fruit: " + fruits[1]);

        // Iterating using a traditional for loop
        System.out.println("\nFruits using traditional for loop:");
        for (int i = 0; i < fruits.length; i++) {
            System.out.println("Fruit at index " + i + ": " + fruits[i]);
        }
    }
}
